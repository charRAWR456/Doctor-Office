@{
  Layout = "_Layout";
}
<title>Patient index</title>

<div class="container">
  <h1>Patients:</h1>
  <hr />
  <h4><a class="btn-float add-new btn-info" href="/patients/new">Add new patient</a></h4>
  @if (Model.Count != 0)
  {
    <ul>
    @foreach (var patient in Model)
    {
      <li><a href='/patients/@patient.GetId()'><span class="bullet">@patient.GetName()</span> |<span class= "text-muted"> @patient.GetBirthDate()</span></a> <br> <a class="btn-info edit-delete"  href="/patients/@patient.GetId()/update">Edit</a> | <a class="btn-info edit-delete"  method="post" href="/patients/@patient.GetId()/delete">Delete</a></li>
    }
    </ul>
  }
  <hr>
</div>
